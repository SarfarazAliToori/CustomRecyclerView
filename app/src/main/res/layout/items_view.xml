<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/items_view_bg"
    android:orientation="vertical"
    android:id="@+id/my_relative_layout"
    >


    <TextView
        android:id="@+id/serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="@color/black"
        android:padding="5dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20sp"
        android:layout_toEndOf="@+id/serial_number"
        android:src="@drawable/car" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:layout_marginStart="20dp"
        android:text="This is my Title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:maxLines="5"
        android:text="This is my Product Description Hello World this is Dummy Text For Product Description Ok. Let's Try to Implement Recycler View."
        android:textColor="@color/black"
        android:textSize="16sp" />


</RelativeLayout>